<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
</head>

<style>
    table,
    th,
    td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    .btn-edit {
        background: orange;
        outline: none;
        border: none;
        height: 25px;
        width: 60px;
        border-radius: 10px;
        cursor: pointer;
    }

    .btn-delete {
        background: rgb(255, 60, 0);
        outline: none;
        border: none;
        height: 25px;
        width: 60px;
        border-radius: 10px;
        cursor: pointer;
    }
</style>

<body>

    <body>
        <table style="width:100%">
            <tr>
                <th>Email</th>
                <th>First name</th>
                <th>Last name</th>
                <th>Last name</th>
                <th>Actions</th>
            </tr>

            <% for(var i=0; i < dataTable.length; i++) { %>
                <tr>
                    <td>
                        <%= dataTable[i].email %>
                    </td>
                    <td>
                        <%= dataTable[i].firstName %>
                    </td>
                    <td>
                        <%= dataTable[i].lastName %>
                    </td>
                    <td>
                        <%= dataTable[i].address %>
                    </td>
                    <td>
                        <a href="/edit-crud?id=<%= dataTable[i].id %>" class="btn-edit" type="button">
                            Edit
                        </a>
                        <a href="/delete-crud?id=<%= dataTable[i].id %>" class="btn-delete" type="button">
                            Delete
                        </a>
                    </td>
                </tr>
                <% } %>
        </table>
    </body>

</html>